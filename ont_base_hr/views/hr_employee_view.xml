<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ont_view_hr_employee" model="ir.ui.view">
        <field name="name">ont_view_hr_employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
             <xpath expr="/form/sheet/notebook/page[@name='hr_settings']" position="after">             
                <page name="hr_additional_info" string="Informacion adicional">
                    <group>
                        <label for="academic_training" string="Formacion academica"/>
                        <field name="academic_training" nolabel="1" />                        
                        <label for="additional_courses" string="Cursos adicionales"/>                        
                        <field name="additional_courses" nolabel="1" />                        
                        <label for="professional_skills" string="Habilidades profesionales"/>
                        <field name="professional_skills" nolabel="1" />                        
                        <label for="professional_goals" string="Metas profesionales"/>
                        <field name="professional_goals" nolabel="1" />                        
                        <label for="personal_skills" string="Habilidades personales"/>
                        <field name="personal_skills" nolabel="1" />                                                                        
                    </group>
                </page>                
            </xpath>
        </field>
    </record>
</odoo>
