<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="ont_base_account_report_trial_balance_qweb_lines_header"
              name="ont_base_account_report_trial_balance_qweb_lines_header"
              customize_show="True"
              inherit_id="account_financial_report_qweb.report_trial_balance_qweb_lines_header"
              priority="20">
        <xpath expr="//div[hasclass('act_as_thead')]/div[hasclass('act_as_row')]/t[@t-if='not show_partner_details']/div[hasclass('act_as_cell')][2]" position="replace">
                <div class="act_as_cell" style="width: 400px;">Account</div>
                <div class="act_as_cell" style="width: 100px;">Type</div>
                <div class="act_as_cell" style="width: 100px;">Clasification</div>
        </xpath>
    </template>
    <template id="ont_base_account_report_trial_balance_qweb_line"
              name="ont_base_account_report_trial_balance_qweb_line"
              customize_show="True"
              inherit_id="account_financial_report_qweb.report_trial_balance_qweb_line"
              priority="20">
        <xpath expr="//div[hasclass('act_as_cell', 'amount')][1]" position="before">
            <t t-if="not show_partner_details">
                 <div class="act_as_cell left">
                     <span t-field="line.account_id.custom_type"/>
                 </div>
                <div class="act_as_cell left">
                     <span t-field="line.account_id.custom_classification"/>
                 </div>
            </t>
        </xpath>
    </template>
</odoo>