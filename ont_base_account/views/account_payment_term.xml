<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ont_base_account_view_payment_term_form" model="ir.ui.view">
        <field name="name">ont_base_account_view_payment_term_form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">       
            <field name="name" position="after">
                <field name="position"/>
                <field name="payment_order_ok"/>               
            </field>
            <field name="line_ids" position="after">
                <separator string="Modos de pago"/>
                <field name="payment_mode_id"/>                
            </field>             
        </field>
    </record>
</odoo>