<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ont_base_account_view_order_form" model="ir.ui.view">
        <field name="name">ont_base_account_view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="payment_mode_id" domain="[('payment_order_ok','=',True),('payment_type', '=', 'inbound')]" options="{'no_create': True}" string="Forma de pago"/>
            </field>                        
        </field>
    </record>
</odoo>