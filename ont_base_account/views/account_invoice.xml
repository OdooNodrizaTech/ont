<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ont_base_account_view_account_invoice_filter" model="ir.ui.view">
        <field name="name">ont_base_account_view_account_invoice_filter</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="number" position="after">
                <field name="number" filter_domain="[('amount_untaxed','=',self)]" string="Base imponible"/>
                <field name="number" filter_domain="[('amount_total','=',self)]" string="Total"/>
                <field name="number" filter_domain="[('residual','=',self)]" string="Importe pendiente"/>
            </field>
        </field>
    </record>
    <record id="ont_base_account_invoice_tree" model="ir.ui.view">
        <field name="name">ont_base_account_invoice_tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">	    	
                <field name="inv_vat"/>
	       </field>
            <field name="state" position="after">
                <field name="partner_bank_name"/>
            </field>
            <field name="amount_total_signed" position="before">
                <field name="amount_untaxed"/>
                <field name="amount_tax"/>
            </field>            
        </field>
    </record>
    <record id="ont_base_account_invoice_supplier_tree" model="ir.ui.view">
        <field name="name">ont_base_account_invoice_supplier_tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">	    	
                <field name="inv_vat"/>
	       </field>
            <field name="state" position="after">
                <field name="partner_bank_name"/>
            </field>
            <field name="amount_total_signed" position="before">
                <field name="amount_untaxed"/>
                <field name="amount_tax"/>
            </field>            
        </field>
    </record>
</odoo>