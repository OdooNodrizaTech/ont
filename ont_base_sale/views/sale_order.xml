        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="amount_total" string="Total"/>
            </field>                                                            
        </field>
    </record>
</odoo>