<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <record id="ont_base_purchase_view_purchase_order_filter" model="ir.ui.view">
        <field name="name">ont_base_purchase_view_purchase_order_filter</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="amount_total" string="Total"/>
            </field>                                                            
        </field>
    </record> 
    <record id="ont_base_purchase_purchase_order_form" model="ir.ui.view">
        <field name="name">ont_base_purchase_purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="payment_mode_id" domain="[('payment_type', '=', 'outbound')]" widget="selection"/>
                <field name="user_id"/>
            </field>                                                                        
        </field>
    </record>    
    <record id="ont_base_purchase_purchase_order_tree" model="ir.ui.view">
        <field name="name">ont_base_purchase_purchase_order_tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="after">
                <field name="user_id"/>
            </field>            
        </field>
    </record>
</odoo>